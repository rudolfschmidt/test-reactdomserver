{
	"extends": ["eslint:recommended", "plugin:react/recommended"],
	"parserOptions": {
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true,
			"experimentalObjectRestSpread": true
		}
	},
	"globals": {
		"env": false,
		"Promise": false
	},
	"env": {
		"browser": true,
		"node": true
	},
	"rules": {
		"react/no-unknown-property": ["error", { "ignore": ["class"] }],
		"react/prop-types": ["off"],
		"no-unused-vars": [
			"error",
			{ "vars": "all", "args": "none", "ignoreRestSiblings": false }
		]
	}
}
